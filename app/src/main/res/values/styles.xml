<resources>

    <style name="Widget.Theme.Gallary.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.Gallary.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="whiteTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="Text_Color">@color/black</item>
        <item name="StrockColor">@color/SelectedTab</item>
        <item name="background">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>

    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="Text_Color">@color/white</item>
        <item name="StrockColor">@color/SelectedTab</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="background">@color/black</item>
    </style>

    <style name="Settingtext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/Text_Color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:layout_marginEnd">@dimen/_16sdp</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/SelectedTab</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="SpinnerTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/SelectedTab</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>