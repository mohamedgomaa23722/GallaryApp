<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/allMediaFragment">

    <fragment
        android:id="@+id/allMediaFragment"
        android:name="com.rajesh.gallary.ui.Fragments.AllMediaFragment"
        android:label="fragment_all_media"
        tools:layout="@layout/fragment_all_media" >
        <action
            android:id="@+id/action_allMediaFragment_to_albumFragment"
            app:destination="@id/albumFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true"
            app:popUpTo="@id/albumFragment" />
        <action
            android:id="@+id/action_allMediaFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/favouriteFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/albumFragment"
        android:name="com.rajesh.gallary.ui.Fragments.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_albumFragment_to_allMediaFragment"
            app:destination="@id/allMediaFragment"
            app:popUpTo="@id/allMediaFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_albumFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment"
            app:popUpTo="@id/favouriteFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="com.rajesh.gallary.ui.Fragments.FavouriteFragment"
        android:label="fragment_favourite"
        tools:layout="@layout/fragment_favourite" >
        <action
            android:id="@+id/action_favouriteFragment_to_allMediaFragment"
            app:destination="@id/allMediaFragment"
            app:popUpTo="@id/allMediaFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_favouriteFragment_to_albumFragment"
            app:destination="@id/albumFragment"
            app:popUpTo="@id/albumFragment"
            app:launchSingleTop="true"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>